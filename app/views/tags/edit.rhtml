<h1>Editing tag</h1>

<%= error_messages_for :tag %>

<% form_for(:tag, :url => tag_path(@tag), :html => { :method => :put }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Active</b><br />
    <%= f.check_box :active %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', tag_path(@tag) %> |
<%= link_to 'Back', tags_path %>