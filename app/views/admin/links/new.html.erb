<h1>blog <small>:: edit link</small></h1>

<%= error_messages_for :links %>

<% form_for(:link, :url => admin_link_path(@post)) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p><br /><br />
  <p>
    <b>Url</b><br />
    <%= f.text_field :url %>
  </p><br /><br />
  <p>
    <b>Alt</b> <i>(optional)</i><br />
    <%= f.text_field :alt %>
  </p><br /><br />
  <p>
    <%= f.submit "Add link" %> or <%= link_to 'cancel', admin_links_path %>
  </p>
<% end %>