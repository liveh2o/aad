<h1>blog <small>:: new post</small></h1>

<%= error_messages_for :post %>

<% form_for(:post, :url => admin_posts_path) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p><br /><br />
  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p><br /><br />
  <p>
    <b>Posted on</b><br />
    <%= f.date_select :posted_on %>
  </p><br /><br />
  <p>
    <%= submit_tag "Publish" %> or <%= link_to 'Cancel', admin_posts_path %>
  </p>
<% end %>
