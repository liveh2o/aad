<h1>Listing posts</h1>

<table>
  <tr>
  </tr>

<% for post in @posts %>
  <tr>
    <td><%= link_to image_tag('trash.gif'), admin_post_path(post), :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to post.title.titleize, edit_admin_post_path(post) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_admin_post_path %>
